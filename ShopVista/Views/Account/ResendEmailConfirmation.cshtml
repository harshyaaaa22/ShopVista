@using ShopVista.Models.ProfileViewModel
@model ResendEmailConfirmationViewModel
@{
    ViewData["Title"] = "Resend Email Confirmation";
    Layout = null;
}
<link rel="stylesheet" href="~/css/logreg.css" />

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Resend Confirmation Email</h3>
                </div>
                <div class="card-body">
                    <p class="mb-4">Enter your email address below to receive a new confirmation link.</p>

                    <form asp-action="ResendEmailConfirmation" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group mb-4">
                            <label asp-for="Email" class="form-label">Email Address</label>
                            <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Send Confirmation Link</button>
                            <a asp-action="Login" asp-controller="Account" class="btn btn-outline-secondary">Back to Login</a>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <p class="mb-0">Remember your password? <a asp-action="Login" asp-controller="Account">Log in</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/logreg.js"></script>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}