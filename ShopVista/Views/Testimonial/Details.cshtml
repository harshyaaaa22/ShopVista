@model Testimonial

<!-- Views/Testimonial/Details.cshtml -->
@{
    ViewData["Title"] = "Testimonial Details";
}

<h1>Testimonial Details</h1>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Customer Name</dt>
        <dd class="col-sm-10">@Model.CustomerName</dd>
        <dt class="col-sm-2">Customer Title</dt>
        <dd class="col-sm-10">@Model.CustomerTitle</dd>
        <dt class="col-sm-2">Testimonial Text</dt>
        <dd class="col-sm-10">@Model.TestimonialText</dd>
        <dt class="col-sm-2">Avatar URL</dt>
        <dd class="col-sm-10">@Model.AvatarUrl</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
